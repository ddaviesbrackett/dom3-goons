<%= bootstrap_form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.text_field :name, {label:"Game Name (required)"} %>
  </div>
  <div class="form-group">
    <%= select(:game, :era, Game.eras.keys) %>
  </div>
  <div class="form-group">
    <%= select(:game, :status, Game.statuses.keys) %>
  </div>
  <div class="form-group">
    <%= select(:game, :version, Game.versions.keys) %>
  </div>
  <div class="form-group">
    <%= f.text_field :server %>
  </div>
  <div class="form-group">
    <%= f.number_field :port %>
  </div>
  <div class="form-group">
    <%= f.number_field :max_players %>
  </div>
  <div class="form-group">
    <%= f.number_field :provinces %>
  </div>
  <div class="form-group">
    <%= f.text_field :map_preview %>
  </div>
  <div class="form-group">
    <%= f.text_field :map_download %>
  </div>
  <div class="form-group">
    <%= f.text_field :message, {label:"Message (required)"} %>
  </div>
  <div class="form-group">
    <%= f.check_box :requires_passwords %>
  </div>
  <div class="col-sm-9 col-sm-offset-3">
    <%= f.submit %>
  </div>
<% end %>
