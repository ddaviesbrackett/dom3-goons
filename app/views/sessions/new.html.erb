<h2 class="text-center">Log In</h2>
<%= form_tag sessions_path, {class:"form-horizontal",role:"form"} do %>
  <div class="form-group">
    <%= label_tag :username, nil, class:"col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= text_field_tag :username, params[:username], class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, class:"col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= password_field_tag :password, nil, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-9 col-sm-offset-3 text-left">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>&nbsp;
      <%= label_tag :remember_me, nil, class:"control-label" %>
    </div>
  </div>
  <div class="col-sm-9 col-sm-offset-3">
    <%= submit_tag "Log in", {class:"btn btn-primary", style:"margin-bottom:1em;display:block;"} %>
    <%= link_to 'Forgot Password?', new_password_reset_path %>
  </div>
<% end %>